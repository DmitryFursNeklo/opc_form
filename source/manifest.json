{
    "name"              : "Magento Form Filler",
    "description"       : "Fill out checkout and registration forms at Magento store. It use dummy data, but you can customize it at settings page",
    "version"           : "0.8.2",
    "manifest_version"  : 2,
    "browser_action"    : {
        "default_title" : "Click to fill out form",
        "default_icon"  : "logo_19.png"
    },
    "permissions"       : [ "tabs", "http://*/*", "https://*/*" ],
    "background"        : { "scripts": ["background.js"] },
    "options_page"      : "options.html",
    "icons"             : {
        "48"            : "logo_48.png",
        "128"           : "logo_128.png"
    }
}