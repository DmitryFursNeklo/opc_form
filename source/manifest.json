{
  "name"              : "Magento Form Filler",
  "description"       : "Fill out checkout and registration forms at Magento store. Plugin uses dummy data for one user, but you can add more users and customize their data on settings page.",
  "version"           : "0.0.0.0",
  "manifest_version"  : 2,
  "browser_action"    : {
    "default_title"   : "Click to fill out form",
    "default_icon"    : "require(./img/logo_19.png)"
  },
  "permissions"       : [ "tabs", "http://*/*", "https://*/*" ],
  "background"        : {
    "scripts"         : [ "background.js" ]
  },
  "options_page"      : "require(./options.html)",
  "icons"             : {
    "48"              : "require(./img/logo_48.png)",
    "128"             : "require(./img/logo_128.png)"
  }
}