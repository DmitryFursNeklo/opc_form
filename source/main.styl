main-font-family = "Helvetica Neue","Calibri","Droid Sans","Helvetica","Arial",sans-serif;
main-background = rgb(240, 240, 240)
text-color = #333
main-text-shadow = 1px 1px 1px rgba(255, 255, 255, .7)


html
body
  padding 0
  margin 0

body
  font 10px main-font-family
  width 640px
  margin 0 auto
  text-align center
  color text-color

fieldset 
  border none
  padding 2em
  background main-background
  margin 6em 0
  border-radius 10px
  border-top-left-radius 0
  position relative

legend 
  position absolute
  font bold 18px/22px main-font-family
  top -32px
  left 0
  padding 5px 20px
  border-radius 10px
  border-bottom-left-radius 0
  border-bottom-right-radius 0
  background main-background
  text-shadow main-text-shadow

.form-list 
  display inline-block
  margin 0
  padding 10px 0 0 0
  .field
    list-style none
    margin 0 0 10px
    position relative
  .hint
    position absolute
    opacity 0
    left 100%
    top 0
    line-height 29px
    white-space nowrap
    padding 0 1em 0 0
    font-size 12px
    perspective 300
    transform-style preserve-3d
    transform translate3d(0, 0, 1px)
    transition all .5s ease-out .2s
  label
    box-sizing border-box
    display inline-block
    vertical-align middle
    font-size 14px
    font-weight bold
    width 110px
    padding 0 20px 0 0
    text-align right
    text-shadow main-text-shadow
  input
  select
    color text-color
    font 14px main-font-family
    box-sizing border-box
    width 300px
    background #fff
    border 1px rgba(78,78,78, .4) solid
    box-shadow inset 0 0 4px #4E4E4E
    border-radius 4px
    padding 5px
    height 30px
    vertical-align middle
    transition box-shadow 200ms ease-out
    &:focus
      outline none
      box-shadow inset 0 0 4px #4E4E4E, 0 0 4px #4E4E4E
  select
    -webkit-appearance menulist-button
  input
    width 300px
    &:focus + .hint
      opacity 1
      transform translate3d(-100%, 0, 10px)

.form-actions 
  margin -1em 0 6em
  text-align right
  input
    border none
    color rgba(255,255,255, .9)
    height 35px
    padding 0 1em
    border-radius .5em
    box-shadow 0 0 2px rgba(0, 0, 0, .8)
    font bold 16px/2em main-font-family
    background  linear-gradient(to bottom, #000 0%,#4E4E4E 50%, #000 100%)
    transition box-shadow 200ms ease-out
    &:hover
    &:focus
      cursor pointer
      outline none
      background  linear-gradient(to bottom, #000 0%,#000 50%, #000 100%)
      color rgba(255,255,255, 1)
      box-shadow 0 0 4px #4E4E4E